<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46B0E1"
    tools:context=".RegistrationUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logouser" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ldata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"


                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp">


                <EditText
                    android:textColorHint="#FFFF"
                    android:id="@+id/Uname"
                    android:textColor="#FFFF"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/editshape"
                    android:drawableStart="@drawable/ic_baseline_insert_emoticon_24"
                    android:drawableLeft="@drawable/ic_baseline_insert_emoticon_24"
                    android:hint="Enter First Name"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAlignment="center"></EditText>

                <EditText
                    android:textColorHint="#FFFF"
                    android:textColor="#FFFF"
                    android:id="@+id/USurname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/editshape"
                    android:drawableStart="@drawable/ic_baseline_insert_emoticon_24"
                    android:drawableLeft="@drawable/ic_baseline_insert_emoticon_24"
                    android:hint="Enter Last Name"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAlignment="center"></EditText>


                <EditText
                    android:textColor="#FFFF"
                    android:id="@+id/email"
                    android:textColorHint="#FFFF"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/editshape"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:hint="Enter Valid Email"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAlignment="center"></EditText>

                <EditText
                    android:textColor="#FFFF"
                    android:textColorHint="#FFFF"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/editshape"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAlignment="center"></EditText>

                <EditText
                    android:textColor="#FFFF"
                    android:id="@+id/cpassword"
                    android:textColorHint="#FFFF"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/editshape"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:hint="Enter Confirm Password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAlignment="center"></EditText>


                <EditText
                    android:textColorHint="#FFFF"
                    android:textColor="#FFFF"
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:maxLength="10"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/editshape"
                    android:drawableStart="@drawable/ic_baseline_call_24"
                    android:drawableLeft="@drawable/ic_baseline_call_24"
                    android:hint="Enter Mobile Number"
                    android:inputType="phone"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAlignment="center"></EditText>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ldata"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_20sdp">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="Female"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="Other"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lgender"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp">

                <Button

                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:text="Submit"
                    android:textColor="#ffff"></Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>